<main>
  <div class="bg-image-full">
    <div class="col-12 h-100 py-5" style="background-color: rgba(0,0,0,0.5);">
      <div class="text-center my-5 py-5">
      <% if @user.profile_image.attached? %>
        <%= image_tag @user.profile_image.variant(resize_to_fill: [150, 150]), class: "img-fluid rounded-circle mb-4" %>
      <% else %>
        <%= image_tag "default-image.jpg", width: 150, height: 150, class: "img-fluid rounded-circle mb-4" %>
      <% end %>
      
        <h3 class="text-white fs-3 fw-bolder"><%= @user.name %></h3>
        
        <% if current_user == @user %>
          <%= link_to edit_user_path(@user), class:"btn btn-secondary w-25 " do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        <% end %>
        <!-- 自己紹介をガラス風に表示 -->
        <div class="mt-4 mx-auto p-4 rounded-4 shadow" style="max-width: 600px; background-color: rgba(255, 255, 255, 0.07); backdrop-filter: blur(6px); border: 1px solid rgba(255,255,255,0.1);">
          <p class="text-white fs-5 lh-lg mb-0" style="font-family: 'Segoe UI', sans-serif; letter-spacing: 0.5px;">
            <%= @user.introduction.presence || "まだ自己紹介が設定されていません。" %>
          </p>
        </div>
      </div>
    </div>
  </div>
  
  <!--部分テンプレートの呼び出し-->
  <%= render 'posts/list', posts: @posts %>
  
</main>